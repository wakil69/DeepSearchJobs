# ============================================
# PostgreSQL Configuration
# ============================================

# Docker service name or hostname for PostgreSQL
PG_HOST=postgres-play2path

# Local development host (if connecting outside Docker)
PG_HOST_DEV=localhost

# Default PostgreSQL port
PG_PORT=5432

# Database credentials (Docker / production)
PG_USER=admin
PG_PASSWORD=admin
PG_DATABASE=play2path

# Database credentials (local / development)
PG_USER_DEV=your_local_pg_user
PG_PASSWORD_DEV=your_local_pg_password
PG_DATABASE_DEV=play2path_dev

# ============================================
# ElasticSearch Configuration
# ============================================

ELASTIC_USER=elastic
ELASTIC_PASSWORD=your_elastic_password

# ============================================
# Debezium Configuration
# ============================================

DEBEZIUM_USER=debezium_user
DEBEZIUM_PWD=your_debezium_password
