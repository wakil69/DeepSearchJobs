{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "rootDir": ".", 
      "allowJs": true,
      "checkJs": false
    },
    "include": ["./src/**/*", "./db/**/*"],  
    "exclude": ["node_modules"]
  }
  